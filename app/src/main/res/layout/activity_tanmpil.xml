<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".tanmpil">
    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="10dp"
            android:id="@+id/card_hasl"
            android:layout_marginTop="150dp" tools:ignore="MissingConstraints">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="1dp" tools:layout_editor_absoluteX="1dp"
            tools:ignore="MissingConstraints">


        <TextView
                android:text="Nama : "
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:layout_width="134dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_height="45dp"
                android:id="@+id/tx1"/>
        <TextView
                android:layout_width="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/tx1"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:textSize="25sp"
                android:ems="10"
                android:id="@+id/tampilnama"/>
        <TextView
                android:text="NPM : "
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tx1"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:layout_width="134dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_height="45dp" android:id="@+id/tx2"/>
        <TextView
                android:layout_width="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/tx1"
                android:layout_below="@+id/tampilnama"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:textSize="25sp"
                android:ems="10"
                android:id="@+id/tampilnpm"/>
        <TextView
                android:text="Tanggal : "
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tx2"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:layout_width="134dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_height="45dp" android:id="@+id/tx3"/>
        <TextView
                android:layout_width="200dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tampilnpm"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:layout_toEndOf="@+id/tx1"
                android:textSize="25sp"
                android:layout_height="45dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/tampiltanggal"/>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatButton
            android:text="kembali"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/card_hasl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/kembali"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="120dp"
            android:id="@+id/editmain"
            android:background="@android:color/holo_green_light"
            app:rippleColor="@android:color/holo_blue_light"
            android:layout_below="@+id/card_hasl"
            android:src="@drawable/ic_edit"
            android:layout_toEndOf="@+id/kembali"
            android:layout_marginBottom="70dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/editmain"
            android:background="@android:color/holo_red_light"
            android:id="@+id/hapusmain"
            app:rippleColor="@android:color/holo_red_light"
            android:layout_below="@+id/card_hasl"
            android:src="@drawable/ic_delete"
            android:layout_marginBottom="70dp"/>
</RelativeLayout>